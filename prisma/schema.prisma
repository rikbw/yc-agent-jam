generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DealStage {
  automated_outreach
  dealer_outreach
  pitch_meeting_planned
  proposal_sent
  mandate_signed
  deal_material_creation
  buyer_reachouts
  deal_negotiations
  deal_closed
  deal_lost
  re_engage_later
}

enum Industry {
  SaaS
  E_commerce
  Manufacturing
  Healthcare
  Fintech
  Food_Beverage
  Professional_Services
  Technology
  Logistics
  Real_Estate
}

enum CallOutcome {
  productive
  no_answer
  voicemail
  scheduled_meeting
  not_interested
}

enum MessageRole {
  assistant
  user
  system
}

model Campaign {
  id           String          @id @default(cuid())
  name         String
  description  String?
  searchParams Json?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  sellers      SellerCompany[]

  @@map("campaigns")
}

model Banker {
  id        String          @id @default(cuid())
  name      String
  email     String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  sellers   SellerCompany[]
  calls     Call[]

  @@map("bankers")
}

model SellerCompany {
  id                String    @id @default(cuid())
  name              String
  industry          Industry
  revenue           Int
  ebitda            Int
  headcount         Int
  geography         String
  dealStage         DealStage
  campaignId        String?
  campaign          Campaign? @relation(fields: [campaignId], references: [id])
  ownerBankerId     String
  ownerBanker       Banker    @relation(fields: [ownerBankerId], references: [id])
  lastContactDate   DateTime
  estimatedDealSize Int
  likelihoodToSell  Int
  website           String?
  valuation         Int?
  calls             Call[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("seller_companies")
}

model Call {
  id              String        @id @default(cuid())
  sellerCompanyId String
  sellerCompany   SellerCompany @relation(fields: [sellerCompanyId], references: [id], onDelete: Cascade)
  bankerId        String
  banker          Banker        @relation(fields: [bankerId], references: [id])
  callDate        DateTime
  duration        Int // in minutes
  outcome         CallOutcome?
  notes           String?
  summary         String?       // AI-generated call summary
  messages        Message[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@map("calls")
}

model Message {
  id         String      @id @default(cuid())
  callId     String
  call       Call        @relation(fields: [callId], references: [id], onDelete: Cascade)
  role       MessageRole
  transcript String
  timestamp  DateTime
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@map("messages")
}
